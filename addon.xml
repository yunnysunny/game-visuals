<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.game-visuals"
       name="Game Visuals"
       version="0.1.1"
       provider-name="whyun">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="zh_CN">游戏画廊</summary>
        <summary lang="en_US">Game Visuals</summary>
        <description lang="zh_CN">显示游戏rom目录中各个rom文件的详情</description>
        <description lang="en_US">Display the details of each rom file in the game rom directory</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>
