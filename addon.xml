<?xml version="1.0" encoding="UTF-8"?>
<addon id="com.whyun.game-poster"
       name="Game Poster"
       version="0.1.0"
       provider-name="whyun">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Rom 详情</summary>
        <description>显示游戏rom目录中各个rom文件的详情</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>
