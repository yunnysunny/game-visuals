<window id="13000" type="window">
    <!-- <defaultcontrol>101</defaultcontrol> -->
    <!-- <allowoverlay>true</allowoverlay>
    <backgroundcolor>0x00000000</backgroundcolor> -->
    <controls>
        <!-- 列表 -->
        <control type="list" id="101">
            <posx>100</posx>
            <posy>100</posy>
            <width>500</width>
            <height>620</height>
            <visible>true</visible>
            <enabled>true</enabled>
            <canfocus>true</canfocus>
            <backgroundcolor>0x80FF0000</backgroundcolor>
            <textcolor>white</textcolor>
            <selectedcolor>yellow</selectedcolor>
            <itemlayout height="40">
                <control type="label">
                    <left>0</left>
                    <top>0</top>
                    <width>580</width>
                    <height>40</height>
                    <visible>true</visible>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout height="40">                
                <control type="label">
                    <left>0</left>
                    <top>0</top>
                    <width>580</width>
                    <height>40</height>
                    <visible>true</visible>
                    <label>[COLOR yellow]$INFO[ListItem.Property(title)][/COLOR]</label>
                </control>
            </focusedlayout>
            <onup>101</onup>
            <ondown>101</ondown>
            <onleft>101</onleft>
            <onright>101</onright>
        </control>

        <!-- 预览区（右侧垂直布局） -->
        <!-- 1. 标题 -->
        <control type="label" id="102">
            <posx>680</posx>
            <posy>100</posy>
            <width>600</width>
            <height>30</height>
            <font>font13_title</font>
            <align>center</align>
            <textcolor>yellow</textcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>

        <!-- 2. 海报（使用 image 控件） -->
        <control type="image" id="103">
            <posx>680</posx>
            <posy>135</posy> <!-- 标题下方 -->
            <width>600</width>
            <height>450</height>
            <aspectratio>keep</aspectratio>
            <texture fallback="DefaultGame.png">$INFO[ListItem.Art(poster)]</texture>
        </control>

        <!-- 3. 简介（多行文本，自动换行） -->
        <control type="textbox" id="104">
            <posx>680</posx>
            <posy>590</posy> <!-- 海报下方 -->
            <width>600</width>
            <height>120</height>
            <font>font12</font>
            <align>justify</align>
            <textcolor>white</textcolor>
            <label>$INFO[ListItem.Plot]</label>
            <autoscroll delay="5000" repeat="5000" time="2000">true</autoscroll>
        </control>

        <!-- 4. 视频窗口（放在简介下方） -->


    </controls>
</window>